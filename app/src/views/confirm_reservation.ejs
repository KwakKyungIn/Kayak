                                      <div class="inline-fields">
                                        <div class = "form-group-fixed">010 - 7496 - 6307</div>
                                      </div>
                                    </div>
                                    <!-- 대여일/시간 -->
                                    <div class="form-group">
                                      <label for="rental-date">대여일/시간</label>
