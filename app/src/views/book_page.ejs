.tab-header {
    display: flex;
    justify-content: center; /* 버튼들을 중앙정렬 */
    margin-bottom: 20px;
    border-bottom: 1px solid #000000;
}

.tab-button {
    background-color: transparent;
    border: 1px solid #dddddd; 
    padding: 7px 20px;
    font-size: 12px;
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: border-color 0.3s, background-color 0.3s, color 0.3s;
    color: gray; /* 비활성 탭 기본 텍스트 색상 */
    flex-grow: 1; /* 버튼이 가로로 길어지도록 설정 */
    text-align: center; /* 텍스트 중앙정렬 */
    font-weight: lighter;
}

.tab-button:hover {
    background-color: #f5f5f5; /* 호버 시 연한 배경색 */
}

.tab-button.active {
    background-color: black; /* 활성화된 탭의 배경색 */
    color: white; /* 활성화된 탭의 텍스트 색상 */
