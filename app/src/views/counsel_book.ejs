.custom-radio input[type="radio"] {
    display: none;
}

/* 체크 마크 기본 스타일 */
.custom-radio .checkmark {
    display: inline-block;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    position: relative;
    cursor: pointer;
}

/* 선택된 상태에서 체크 모양 스타일 공통 설정 */
.custom-radio input[type="radio"]:checked + .checkmark::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scaleX(-1) rotate(45deg);
    width: 7px;
    height: 3.5px;
    border: solid;
    border-width: 0 0.1px 0.1px 0;
    display: block;
}
.custom-radio .checkmark-black {
    background-color: #444; /* 안쪽이 검정 */
    border: 0.1px solid #444; /* 검정 테두리 */
}

/* 체크된 상태에서 흰색 체크 */
.custom-radio input[type="radio"]:checked + .checkmark-black::after {
    border-color: #fff; /* 체크 색상: 흰색 */
}
.custom-radio .checkmark-white {
    background-color: #fff; /* 안쪽이 흰색 */
    border: 0.1px solid #444; /* 검정 테두리 */
}

/* 체크된 상태에서 검정 체크 */
